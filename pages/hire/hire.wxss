/* pages/hire/hire.wxss */

page {
  height: 100%;
}

.hire_container {
  background-color: #f5f5f6;
  height: 100%;
}

.hire_top {
  height: 170px;
  background: #fff;
  padding: 10px 0;
  background: #fff;
}

.hire_top_title {
  border-bottom: #f5f5f6 solid 1rpx;
  padding: 10px 0;
  font-size: 30rpx;
}

.hire_left {
  margin: 0 10px;
}

.hire_top_info {
  height: 110px;
  padding: 15px 0;
}

.hire_top_info_left {
  width: 35%;
}

.hire_top_info_left image {
  width: 100%;
  height: 100%;
}

.hire_top_info_right {
  width: 65%;
}

.hire_top_info_right {
  width: 65%;
  display: flex;
  flex-direction: column;
  padding-top: 10rpx;
}

.hire_top_info_right_top {
  font-size: 30rpx;
  /* margin-bottom: 10rpx; */
}

.text_lable {
  color: #959595;
  font-size: 25rpx;
}

.text_msg {
  font-size: 25rpx;
}

.hire_middle {
  height: 75px;
  margin-top: 10px;
  background: #fff;
}

.hire_bottom {
  height: 20px;
  margin-top: 10px;
  background: #fff;
  padding: 15px 15px;
}

.hire_padding {
  padding: 15px 15px;
}

.hire_middle_top {
  padding: 10px 10px 0 10px;
}

.hire_middle_bottom {
  padding: 10px 10px 15px 10px;
}

.hire_footer {
  background: #fff;
  position: absolute;
  bottom: 0px;
  width: 100%;
  height: 30px;
  z-index: 2;
  overflow: hidden;
  padding: 10px 10px;
}

.hire_footer_btn {
  width: 70%;
  text-align: right;
}

.hire_footer_btn button {
  display: inline;
  margin-right: 20px;
  line-height: normal;
  background: #e9521e;
  color: #fff;
  padding: 10rpx 25rpx;
  font-size: 35rpx;
}
