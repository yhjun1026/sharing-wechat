/**index.wxss**/
page {
  height: 100%;
}

.list_contain {
  height: 100%;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.index_search {
  background-color: #f5f5f6;
  padding: 15rpx 15rpx;
  border: #f5f5f6 solid 1rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
}

index_search_input {
  width: 90%;
  background-color: #fff;
}

.index_search_input input {
  background-color: #fff;
  height: 70rpx;
  width: 625rpx;
  padding-left: 15rpx;
  border-bottom-right-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.index_search_icon {
  width: 10%;
  margin-left: 15rpx;
  background-color: #fff;
  padding-left: 20rpx;
  padding-top: 14rpx;
  border-bottom-left-radius: 10rpx;
  border-top-left-radius: 10rpx;
}

.index_containt_list {
  display: flex;
  flex-direction: row;
  height: 170rpx;
  padding: 25rpx 0;
  border-bottom: solid #f5f5f6 1rpx;
  margin: 0 25rpx;
}

.index_containt_list_left {
  width: 35%;
}

.index_containt_list_left image {
  width: 100%;
  height: 100%;
}

.index_containt_list_middle {
  width: 45%;
  display: flex;
  flex-direction: column;
  padding-top: 15rpx;
}

.index_containt_list_middle_top {
  font-size: 30rpx;
  margin-bottom: 15rpx;
  color: #333;
}

.index_containt_list_middle_center {
  margin-bottom: 15rpx;
  font-size: 25rpx;
}

.index_containt_list_right {
  width: 20%;
}

.index_containt_list_right button {
  font-size: 30rpx;
  color: #fff;
  background-color: #e9521e;
  margin-top: 110rpx;
  margin-right: 20rpx;
  height: 54rpx;
  line-height: 1.8;
}

.index_containt_list_middle_bottom {
  font-size: 25rpx;
}
