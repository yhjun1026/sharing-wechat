/* pages/list/list.wxss */

page {
  height: 100%;
}

.list_contain {
  height: 100%;
}

.list_btn {
  background-color: #f5f5f6;
  padding: 15rpx 0;
}

.tabs {
  border: solid #e9521e 1rpx;
  font-size: 25rpx;
  padding: 10rpx 0;
}

.red {
  background: #e9521e;
  color: #fff;
}

.default {
  background: #fff;
  color: #e9521e;
}

.list_btn_left {
  width: 50%;
  text-align: center;
  margin-left: 30%;
  border-bottom-left-radius: 10rpx;
  border-top-left-radius: 10rpx;
}

.list_btn_right {
  width: 50%;
  text-align: center;
  margin-right: 30%;
  border-bottom-right-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.index_containt_list {
  display: flex;
  flex-direction: row;
  height: 300rpx;
  padding: 25rpx 0;
  border-bottom: solid #f5f5f6 1rpx;
  margin: 0 25rpx;
}

.index_containt_list_left {
  width: 35%;
}

.index_containt_list_left image {
  width: 100%;
  height: 100%;
}

.index_containt_list_middle {
  width: 65%;
  display: flex;
  flex-direction: column;
  padding-top: 15rpx;
}

.index_containt_list_middle_top {
  font-size: 30rpx;
  margin-bottom: 10rpx;
}

.index_containt_list_middle_center {
  margin-bottom: 10rpx;
}

.text_lable {
  color: #959595;
  font-size: 25rpx;
}
.text_msg{
 font-size: 25rpx;
}
.index_containt_list_middle_status{
  position: absolute;
  margin-left: 40%;
}

.index_containt_list_middle_status image{
  width: 160rpx;
  height: 120rpx;
}